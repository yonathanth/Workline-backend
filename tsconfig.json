{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@/database/*": [
                "src/database/*"
            ],
            "@/auth/*": [
                "src/auth/*"
            ],
            "@/organizations/*": [
                "src/organizations/*"
            ],
            "@/memberships/*": [
                "src/memberships/*"
            ],
            "@/invitations/*": [
                "src/invitations/*"
            ],
            "@/common/*": [
                "src/common/*"
            ],
            "@/config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}